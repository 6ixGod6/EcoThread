modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend Server"

[[workflows.workflow]]
name = "Backend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && pip install django djangorestframework django-cors-headers psycopg2-binary && python run.py"
waitForPort = 8000

[deployment]
run = ["sh", "-c", "cd backend && pip install django djangorestframework django-cors-headers psycopg2-binary && python run.py"]

[[ports]]
localPort = 8000
externalPort = 80
